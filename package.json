{
  "name": "@stefandesu/vite-test-library",
  "version": "0.1.3",
  "files": [
    "dist",
    "src"
  ],
  "main": "./dist/vite-test-library.umd.js",
  "module": "./dist/vite-test-library.es.js",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "require": "./dist/vite-test-library.umd.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "test": "mocha --recursive",
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint --ignore-path .gitignore --ext .js,.vue .",
    "fix": "npm run lint -- --fix",
    "lint-staged": "lint-staged",
    "release": "test $(git rev-parse --abbrev-ref HEAD) = dev && git pull && npm test && npm run build && npm version $SEMVER && git push && git checkout main && git merge dev && git push --follow-tags && git checkout dev",
    "release:patch": "SEMVER=patch npm run release",
    "release:minor": "SEMVER=minor npm run release",
    "release:major": "SEMVER=major npm run release"
  },
  "lint-staged": {
    "**/*.{js,vue}": [
      "eslint --fix",
      "npm run --silent test"
    ]
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "dependencies": {
    "vue": "^3.0.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^1.2.1",
    "@vue/compiler-sfc": "^3.0.5",
    "eslint": "^7.24.0",
    "eslint-config-gbv": "^1.0.1",
    "eslint-plugin-vue": "^7.9.0",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.2",
    "mocha-eslint": "^7.0.0",
    "pre-commit": "^1.2.2",
    "vite": "^2.1.5"
  },
  "author": "Stefan Peters <stefandesu@exo.pm> (https://exo.pm)",
  "license": "MIT",
  "description": "Just testing stuff with Vite."
}
